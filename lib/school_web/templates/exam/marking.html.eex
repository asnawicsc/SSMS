
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Exam Mark for <%= @a.exam_name %></title>
    <style>
    html {
      font-family: sans-serif;
    }
    table {
      border-collapse: collapse;
      border: 2px solid rgb(200,200,200);
      letter-spacing: 1px;
      font-size: 0.8rem;
    }
    td, th {
      border: 1px solid rgb(190,190,190);
      padding: 10px 20px;
    }
    td {
      text-align: center;
    }
    caption {
      padding: 10px;
    }
    </style>
  </head>
 <% require IEx %>
  <body>
    <h1>(<%=@a.class_name %>) Exam Mark for <%= @a.subject_name %></h1>
<form method="post" action="/create_mark" class="form-horizontal">
   
    <table>
      <colgroup>
        <col col span="2" >
      </colgroup>
      <tr>
          <th style="background-color:#97DB9A;"><%= gettext "No" %></th>
         <th style="background-color:#97DB9A;"><%= gettext "Student Name" %></th>
        <th style="background-color:#97DB9A;"><%= gettext "Mark" %></th>
      </tr>
       <%= for item <- @all|>Enum.with_index do %>
       <% no = item|>elem(1) %>
           <% item = item|>elem(0) %>
      <tr>
         <th ><%= no + 1 %></th>
       <th ><%= item.student_id %></th>
        <th  ><input type="number" min="0" max="100" name="mark[<%=item.id %>]"></th>

      </tr>
         <% end %>

    </table>


  </body>
</html> <br>

    <input class="btn btn-primary" name="" value="Submit" type="submit">
</form>

