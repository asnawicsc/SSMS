<div class="row">

<div class="col-md-5">
        <!-- START card-->
        <div class="card card-default">
            <div class="card-body" id="">
                <div id="myclock" align="center"></div>
            </div>
        </div>
        <!-- END card-->
    </div>
  
  <div class="col-md-7">
        <!-- START card-->

        <div class="card card-default">
            <div class="card-body" id="">
              <div class="row ml-auto" align="right">
               <label class="switch switch-sm">
                                  <input type="radio" checked="check_time" id="check_time_in_mode"   name="radioSwitch">
                                 <span></span> &nbsp; Time In 
                              </label>&nbsp;&nbsp;
                              <label class="switch switch-sm">
                                  <input type="radio" id="check_time_out_mode" name="radioSwitch">
                                 <span></span> &nbsp; Time Out
                              </label>
                            </div>
                <form>
                    <div class="form-group">
                        <label>Single Mark Attendance</label>
                        <input class="form-control" id="qt" placeholder="Enter query" name="dad" type="text">
                    </div>
                </form>
    
            </div>
        </div>
        <!-- END card-->
    </div>
</div>


<div class="row">
   

  <div class="col-md-12">
        <!-- START card-->

        <div class="card card-default">
            <div class="card-body" id="">
                <form>
                    <div class="form-group">
                        <label>Attended Teacher</label>
                     
                    </div>
                </form>
                <div class="table-responsive">
                            <table class="table" id="datatable2">
                        <thead>
                            <tr>
                                <th>Picture</th>
                                <th>
                                    <%= gettext("Name") %>
                                </th>
                                <th>
                                    <%= gettext("Chinese Name") %>
                                </th>
                                <th>
                                    <%= gettext("Time In") %>
                                </th>
                               
                                <th>
                                    <%= gettext("Time Out") %>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        <%= for ta <- @teachers_attend do %>
                          <tr>
                              <td class="text-left"> <img id="preview6"  style='width:20px; height: 20px;' src='data:image/png;base64, <%= ta.image_bin %>'></td>
                              <td><%= ta.name %></td>
                                <td><%= ta.cname %></td>
                                 <td><%= ta.time_in %></td>
                                  <td><%= ta.time_out %></td>
                          </tr>
                          <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END card-->
    </div>
</div>


