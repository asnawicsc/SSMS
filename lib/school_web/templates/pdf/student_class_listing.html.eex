    <tr align="center">
      <th><%= gettext "Bil." %></th>
      <th><%= gettext "学号" %></th>
        <th><%= gettext "Name" %></th>
      <th><%= gettext "姓名" %></th>
      <th><%= gettext "Jan" %></th>
      <th></th>
