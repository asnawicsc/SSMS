      <th></th>
      <th></th>


    </tr>
  </thead>
  <tbody>
<%= for item <- @all do %>
<% no=item|>elem(1) %>
<% item=item|>elem(0) %>

    <tr align="center">
      <td><%= no+1 %></td>
       <td><%= item.id_no %></td>
        <%= if String.length(item.name) > 40 do %>
       <td align="left" style="font-size: 8px;" ><%=  item.name %></td>
        <% else %>
        <td align="left" ><%=  item.name %></td>
       <% end  %>
       <td width="80px"><%= item.chinese_name %></td>
       <td><%= if item.sex == "M" do "L" end %>
        <%= if item.sex == "F" do "P" end %></td>
       <td width="40px"></td>
       <td width="40px"></td>
       <td width="40px"></td>
       <td width="40px"></td>
       <td width="40px"></td>
       <td width="40px"></td>
       <td width="40px"></td>
       <td width="40px"></td>
       <td width="40px"></td>
       <td width="40px"></td>

    </tr>
<% end %>


  </tbody>
</table>

