

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">


  </head>
 <% require IEx %>
  <body>

<form method="post" action="/update_head_count_mark" class="form-horizontal">
  <input type="hidden" name="_csrf_token" value="<%= Phoenix.Controller.get_csrf_token %>">
   <input type="hidden" name="class_id" value="<%= @class.id %>">
    <input type="hidden" name="subject_id" value="<%= @subject.id %>">



     <div class="row">
               <div class="col-12">
                  <!-- START card-->
                  <div class="card card-default">
                     <div class="card-header">Target Exam Mark for <%= @subject.description %> (<%=@class.name %>)</div>
                     <div class="card-body">
                        <!-- START table-responsive-->
                        <div class="table-responsive">
                             <table class="table table-striped table-bordered table-hover">
                              <thead>
                                 <tr>
                                    <th style="background-color:#97DB9A;"><%= gettext "Student Name" %></th>
                                    <th style="background-color:#97DB9A;"><%= gettext "Mark" %></th>
                              
                                 </tr>
                              </thead>
                              <tbody>
                                <%= for item <- @all do %>
                                  <% student=Affairs.get_student!(item.student_id)%>
                                 <tr>
                                    <td><%= student.name %></td>
                                    <td><input type="number" min="0" max="100" value="<%= item.mark %>" name="mark[<%=item.student_id %>]"></td>
                                
                                 </tr>
                                    <% end %>
                              </tbody>
                           </table>
                        </div>
                        <!-- END table-responsive-->
                     </div>
                      

                  </div>
                 
                    <center><input class="btn btn-primary" name="" value="Submit" type="submit" style="margin-bottom: 10px"></center> 
               </div>
            
            </div>



 
  
</form>
</body>
</div>
