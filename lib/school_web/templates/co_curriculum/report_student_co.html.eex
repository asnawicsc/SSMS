
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>CoCurriculum Mark</title>
    <style>
    html {
      font-family: sans-serif;
    }
    table {
      border-collapse: collapse;
      border: 2px solid rgb(200,200,200);
      letter-spacing: 1px;
      font-size: 0.8rem;
    }
    td, th {
      border: 1px solid rgb(190,190,190);
      padding: 10px 20px;
    }
    td {
      text-align: center;
    }
    caption {
      padding: 10px;
    }
    </style>
  </head>
 <% require IEx %>
  <body>

   <input type="hidden" name="cocurriculum_id" value="<%= @cocurriculum %>">
    <input type="hidden" name="standard_id" value="<%= @co_level %>">
     <input type="hidden" name="year" value="<%= @co_year %>">
      <input type="hidden" name="semester_id" value="<%= @co_semester %>">

       <input type="hidden" name="_csrf_token" value="<%= @csrf %>">

    <table>
      <colgroup>
        <col col span="2" >
      </colgroup>
      <tr>

         <th style="background-color:#97DB9A;"><%= gettext "Student Name" %></th>
          <th style="background-color:#97DB9A;"><%= gettext "Chinese Name" %></th>
          <th style="background-color:#97DB9A;"><%= gettext "Class" %></th>
        <th style="background-color:#97DB9A;"><%= gettext "Mark" %></th>
      </tr>
       <%= for item <- @students do %>

      <tr>

       <th ><%= item.name %></th>
       <th ><%= item.chinese_name %></th>
         <th ><%= item.class_name %></th>
        <th  ><%=item.mark %></th>

      </tr>
         <% end %>

    </table>


  </body>
</html>

